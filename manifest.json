{
  "manifest_version": 3,
  "name": "Quiz Generator",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/Readability.js", "content-script.js"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
